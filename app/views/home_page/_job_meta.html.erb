<% @jobs.each do |job| %>
    <div data-controller="job" data-job-id="<%= job.id %>">
      <%= link_to( home_show_path(job), type: "html",
                   data: { action: "ajax:success->job#jobAjax
                                    ajax:error->job#jobAjaxFail
                                    ajax:before->job#jobClick"},
                   remote: true ) do %>
        <span class="job">
          <span class="job__title">
            <h5><%= job.title %></h5>
          </span>
          <span class="job__meta">
            <span class="job__date">
              <%= job.date %>
            </span>
            <span class="job__company">
              <%= job.company %>
            </span>
            <span class="job__location">
              <%= job.location %>
            </span>
          </span>
        </span>
      <% end %>
    </div>
<% end %>
