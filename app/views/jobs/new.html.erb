<div data-controller="scrollbar" class="grid">
  <div class="grid__header">
    RailsJobHub
  </div>

  <div data-controller="job-post--job-meta" data-target="scrollbar.left"
       class="grid__left">
    <div>
      <a href="#" onClick="event.preventDefault()">
        <span class="job">
          <span class="job__title">
            <h4 data-target="job-post--job-meta.title">Your Title Here</h4>
          </span>
          <span class="job__meta">
            <span class="job__date">
              Today
            </span>
            <span class="job__company" data-target="job-post--job-meta.company">
              Company
            </span>
            <span class="job__location" data-target="job-post--job-meta.location">
              Location
            </span>
          </span>
        </span>
      </a>
    </div>
    <div class="form-group col-xs-12">
      <%= form_for @job do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control input-lg",
                         data: {action: 'input->job-post--job-meta#changeTitle',
                                target: 'job-post--job-meta.titleFocus'} %>
        <br>
        <%= f.label :email %><br>
        <%= f.text_field :email, class: "form-control input-lg" %>
        <br>
        <%= f.label :Company %>
        <%= f.text_field :company, class: "form-control input-lg",
                          data: {action: 'input->job-post--job-meta#changeCompany'}%>
        <br>
        <%= f.label :Skills %>
        <%= f.text_field :skills, class: "form-control input-lg" %>
        <br>
        <%= f.label :Location %>
        <%= f.text_field :location, class: "form-control input-lg",
                         data: {action: "input->job-post--job-meta#changeLocation"}%>
        <br>
        <%= f.label :What_link_do_applicants_apply_with? %>
        <%= f.text_field :link, class: "form-control input-lg" %>
        <br>
        <%= f.label :What_would_you_pay_for_30_days? %>
        <%= f.number_field :price, class: "form-control input-lg" %>
        <br>
        <%= f.label :description %><br>
        <%= f.hidden_field :description, class: "form-control input-lg", id: "trix" %>
        <trix-editor input="trix" data-controller="job-post--job-description"
          data-action="trix-change->job-post--job-description#changeDescription">
        </trix-editor>
        <br>
        <%# f.submit 'Preview', name: 'preview_button'  %>
        <%= f.submit "Create Job Post", class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>

  <div data-target="scrollbar.right" class="grid__right_job" id="job_description">
  </div>

</div>
